#! /usr/bin/env python3

import argparse
import asyncio
import datetime
import glob
from ieapspect import SerSpect

def int_positive(s):
    x = int(s)
    if x < 1:
        raise ValueError("%d is not a positive integer!" % x)
    return x

parser = argparse.ArgumentParser(
    prog = "ieapspect-filedump"
)
parser.add_argument(
    "-s", "--serial",
    help = "Serial port to use",
    default = "/dev/ttyACM*"
)
parser.add_argument(
    "-f", "--file",
    help = "File to use",
    default = "/dev/null"
)
parser.add_argument(
    "-t", "--threshold",
    type = int_positive,
    default = 10
)
parser.add_argument(
    "-b", "--bias",
    action = "store_true",
)
parser.add_argument(
    "-a", "--amp",
    action = "store_true"
)

args = parser.parse_args()

async def main():
    sss = glob.glob(args.serial)[0]
    spectrometer = await SerSpect.connect(glob.glob(args.serial)[0])
    spectrometer.set_prop(SerSpect.PROP_THRESH, args.threshold)
    spectrometer.set_prop(SerSpect.PROP_AMP, args.amp)
    spectrometer.set_prop(SerSpect.PROP_BIAS, args.bias)
    spectrometer.start()
    with open(args.file, "w+") as f:
        async for v in spectrometer:
            print(v)
            f.write("%d" % v)

asyncio.get_event_loop().run_until_complete(main())
